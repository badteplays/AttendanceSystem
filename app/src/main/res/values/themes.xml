<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- 
    ╔══════════════════════════════════════════════════════════════╗
    ║  PREMIUM DARK THEME - Default                                ║
    ║  Midnight + Electric Accents | Luxury & Sophisticated        ║
    ╚══════════════════════════════════════════════════════════════╝
    -->
    
    <!-- Base application theme - DARK MODE DEFAULT -->
    <style name="Base.Theme.AttendanceSystem" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color - Electric Cyan -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        
        <!-- Secondary brand color - Royal Purple -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        
        <!-- Tertiary color - Electric Pink -->
        <item name="colorTertiary">@color/tertiary</item>
        <item name="colorOnTertiary">@color/on_tertiary</item>
        
        <!-- Background colors - Deep Midnight -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnBackground">@color/on_background</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="colorSurfaceVariant">@color/surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/on_surface_variant</item>
        
        <!-- Error color -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/on_error</item>
        
        <!-- Outline -->
        <item name="colorOutline">@color/outline</item>
        
        <!-- Status bar - Dark & Immersive -->
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/background</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        
        <!-- Window background -->
        <item name="android:windowBackground">@color/background</item>
        
        <!-- Button styles -->
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.App.Button.Outlined</item>
        <item name="borderlessButtonStyle">@style/Widget.App.Button.Text</item>
        
        <!-- Card styles -->
        <item name="materialCardViewStyle">@style/Widget.App.CardView</item>
        
        <!-- Text Input styles -->
        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>
        
        <!-- Bottom Navigation -->
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigation</item>
        
        <!-- Typography -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.App.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.App.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.App.Headline3</item>
        <item name="textAppearanceBody1">@style/TextAppearance.App.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.App.Body2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.App.Caption</item>
        
        <!-- Shape -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.Small</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.Medium</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.App.Large</item>
    </style>

    <style name="Theme.AttendanceSystem" parent="Base.Theme.AttendanceSystem" />
    
    <!-- ═══════════════════════════════════════════════════════════════
         BUTTON STYLES - Premium Glow Effects
         ═══════════════════════════════════════════════════════════════ -->
    
    <!-- Primary Button - Neon Glow -->
    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/on_primary</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingStart">28dp</item>
        <item name="android:paddingEnd">28dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="rippleColor">@color/ripple</item>
    </style>
    
    <!-- Gradient Button Style -->
    <style name="Widget.App.Button.Gradient" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_gradient_multi</item>
        <item name="backgroundTint">@null</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="elevation">0dp</item>
    </style>
    
    <!-- Secondary/Outlined Button with Glow -->
    <style name="Widget.App.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/primary</item>
        <item name="strokeColor">@color/primary</item>
        <item name="strokeWidth">1.5dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingStart">28dp</item>
        <item name="android:paddingEnd">28dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="rippleColor">@color/ripple</item>
        <item name="android:background">@drawable/button_outline_glow</item>
        <item name="backgroundTint">@null</item>
    </style>
    
    <!-- Text Button -->
    <style name="Widget.App.Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/primary</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="rippleColor">@color/ripple_light</item>
    </style>
    
    <!-- Success Button - Green Glow -->
    <style name="Widget.App.Button.Success" parent="Widget.App.Button">
        <item name="backgroundTint">@color/success</item>
        <item name="android:textColor">@color/on_success</item>
    </style>
    
    <!-- Error/Danger Button -->
    <style name="Widget.App.Button.Error" parent="Widget.App.Button">
        <item name="backgroundTint">@color/error</item>
        <item name="android:textColor">@color/on_error</item>
    </style>
    
    <!-- ═══════════════════════════════════════════════════════════════
         CARD STYLES - Glass Effect
         ═══════════════════════════════════════════════════════════════ -->
    
    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">24dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/card_border</item>
        <item name="contentPadding">0dp</item>
    </style>
    
    <style name="Widget.App.CardView.Elevated" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">28dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@color/card_background_elevated</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/card_border</item>
    </style>
    
    <style name="Widget.App.CardView.Glass" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">24dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">#15151F</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">#2A2A3A</item>
    </style>
    
    <!-- ═══════════════════════════════════════════════════════════════
         TEXT INPUT STYLES - Dark & Premium
         ═══════════════════════════════════════════════════════════════ -->
    
    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxStrokeColor">@color/input_stroke_selector</item>
        <item name="hintTextColor">@color/primary</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="boxBackgroundColor">@color/input_background</item>
        <item name="android:textColorHint">@color/text_hint</item>
    </style>
    
    <!-- ═══════════════════════════════════════════════════════════════
         BOTTOM NAVIGATION - Sleek Dark
         ═══════════════════════════════════════════════════════════════ -->
    
    <style name="Widget.App.BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="backgroundTint">@color/bottom_nav_background</item>
        <item name="itemIconTint">@color/bottom_nav_color_selector</item>
        <item name="itemTextColor">@color/bottom_nav_color_selector</item>
        <item name="itemActiveIndicatorStyle">@style/App.BottomNavigation.ActiveIndicator</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="elevation">0dp</item>
    </style>
    
    <style name="App.BottomNavigation.ActiveIndicator" parent="">
        <item name="android:color">@color/bottom_nav_indicator</item>
    </style>
    
    <!-- ═══════════════════════════════════════════════════════════════
         TYPOGRAPHY - Premium Dark
         ═══════════════════════════════════════════════════════════════ -->
    
    <style name="TextAppearance.App.Headline1" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textSize">34sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>
    
    <style name="TextAppearance.App.Headline2" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>
    
    <style name="TextAppearance.App.Headline3" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.App.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    
    <style name="TextAppearance.App.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
    </style>
    
    <style name="TextAppearance.App.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
    </style>
    
    <style name="TextAppearance.App.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_hint</item>
    </style>
    
    <style name="TextAppearance.App.Label" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:letterSpacing">0.08</item>
        <item name="android:textAllCaps">true</item>
    </style>
    
    <!-- Glow Text Style -->
    <style name="TextAppearance.App.Glow" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:shadowColor">@color/glow_primary</item>
        <item name="android:shadowRadius">8</item>
    </style>
    
    <!-- ═══════════════════════════════════════════════════════════════
         SHAPE APPEARANCES
         ═══════════════════════════════════════════════════════════════ -->
    
    <style name="ShapeAppearance.App.Small" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">14dp</item>
    </style>
    
    <style name="ShapeAppearance.App.Medium" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>
    
    <style name="ShapeAppearance.App.Large" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">28dp</item>
    </style>
    
    <style name="ShapeAppearance.App.Circular" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    
    <!-- ═══════════════════════════════════════════════════════════════
         SPLASH SCREEN - Dark
         ═══════════════════════════════════════════════════════════════ -->
    
    <style name="Theme.AttendanceSystem.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/background</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/primary</item>
        <item name="postSplashScreenTheme">@style/Theme.AttendanceSystem</item>
    </style>
    
    <!-- ═══════════════════════════════════════════════════════════════
         DIALOG STYLES - Dark Glass
         ═══════════════════════════════════════════════════════════════ -->
    
    <style name="Theme.App.Dialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="colorSurface">@color/dialog_background</item>
        <item name="dialogCornerRadius">28dp</item>
    </style>
    
    <!-- ═══════════════════════════════════════════════════════════════
         CHIP STYLES - Neon
         ═══════════════════════════════════════════════════════════════ -->
    
    <style name="Widget.App.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipCornerRadius">14dp</item>
        <item name="chipBackgroundColor">@color/surface_variant</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="checkedIconVisible">false</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">@color/outline</item>
    </style>
    
    <style name="Widget.App.Chip.Status" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipCornerRadius">10dp</item>
        <item name="chipMinHeight">30dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>
    
    <style name="NavDrawerTextAppearance" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:fontWeight" tools:targetApi="o">500</item>
        <item name="android:letterSpacing">0.02</item>
    </style>
</resources>
