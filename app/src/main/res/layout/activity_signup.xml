<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/ic_arrow_back"
            android:background="@drawable/icon_container"
            android:contentDescription="Go back"
            app:tint="@color/text_secondary"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Account"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Join us and start tracking attendance"
            android:textSize="15sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="32dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            style="@style/Widget.App.TextInputLayout"
            app:boxBackgroundColor="@color/surface_variant"
            app:startIconDrawable="@drawable/ic_person"
            app:startIconTint="@color/text_hint"
            app:errorEnabled="true"
            app:helperText="Enter your full name"
            app:helperTextTextColor="@color/text_hint"
            android:hint="Full Name">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName|textCapWords"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:autofillHints="name" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            style="@style/Widget.App.TextInputLayout"
            app:boxBackgroundColor="@color/surface_variant"
            app:startIconDrawable="@drawable/ic_email"
            app:startIconTint="@color/text_hint"
            app:errorEnabled="true"
            android:hint="Email">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:autofillHints="emailAddress" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            style="@style/Widget.App.TextInputLayout"
            app:boxBackgroundColor="@color/surface_variant"
            app:startIconDrawable="@drawable/ic_class"
            app:startIconTint="@color/text_hint"
            app:errorEnabled="true"
            app:helperText="Example: BSIT-3A, BSCS-2B"
            app:helperTextTextColor="@color/text_hint"
            android:hint="Section">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapCharacters"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:textSize="16sp"
                android:textColor="@color/text_primary" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputDepartment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:visibility="gone"
            style="@style/Widget.App.TextInputLayout"
            app:boxBackgroundColor="@color/surface_variant"
            app:startIconDrawable="@drawable/ic_work"
            app:startIconTint="@color/text_hint"
            app:errorEnabled="true"
            app:helperText="Example: Computer Science, Mathematics"
            app:helperTextTextColor="@color/text_hint"
            android:hint="Department">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editDepartment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:textSize="16sp"
                android:textColor="@color/text_primary" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            style="@style/Widget.App.TextInputLayout"
            app:boxBackgroundColor="@color/surface_variant"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/text_hint"
            app:startIconDrawable="@drawable/ic_lock"
            app:startIconTint="@color/text_hint"
            app:errorEnabled="true"
            app:helperText="Minimum 6 characters"
            app:helperTextTextColor="@color/text_hint"
            android:hint="Password">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:autofillHints="password" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            style="@style/Widget.App.TextInputLayout"
            app:boxBackgroundColor="@color/surface_variant"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/text_hint"
            app:startIconDrawable="@drawable/ic_lock"
            app:startIconTint="@color/text_hint"
            app:errorEnabled="true"
            android:hint="Confirm Password">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:imeOptions="actionDone"
                android:maxLines="1"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:autofillHints="password" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I am a"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="10dp" />

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="28dp">

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/studentRadio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Student"
                android:checked="true"
                android:textSize="15sp"
                android:textColor="@color/text_primary"
                app:buttonTint="@color/primary" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/teacherRadio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Teacher"
                android:textSize="15sp"
                android:textColor="@color/text_primary"
                app:buttonTint="@color/primary" />

        </RadioGroup>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSignup"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Create Account"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:cornerRadius="12dp"
            app:backgroundTint="@color/primary"
            android:layout_marginBottom="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account? "
                android:textSize="14sp"
                android:textColor="@color/text_secondary" />

            <TextView
                android:id="@+id/txtLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign In"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:padding="4dp"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
