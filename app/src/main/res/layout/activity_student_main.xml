<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawerLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <FrameLayout
            android:id="@+id/fragmentContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/navigationView"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:background="@drawable/nav_drawer_background"
            android:elevation="8dp"
            app:itemIconSize="22dp"
            app:itemIconPadding="16dp"
            app:itemHorizontalPadding="20dp"
            app:itemVerticalPadding="12dp"
            app:itemShapeInsetStart="12dp"
            app:itemShapeInsetEnd="12dp"
            app:itemShapeInsetTop="4dp"
            app:itemShapeInsetBottom="4dp"
            app:itemIconTint="@color/nav_drawer_item_color"
            app:itemTextColor="@color/nav_drawer_item_color"
            app:itemBackground="@drawable/nav_item_background"
            app:itemTextAppearance="@style/NavDrawerTextAppearance"
            app:headerLayout="@layout/nav_header_student"
            app:menu="@menu/menu_student_drawer" />

    </androidx.drawerlayout.widget.DrawerLayout>

    <FrameLayout
        android:id="@+id/drawerHandle"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:background="@drawable/nav_handle_button"
        android:clickable="true"
        android:focusable="true"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_menu_drawer"
            app:tint="@color/text_primary"
            android:contentDescription="Open navigation" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
