<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="@color/card_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Status indicator -->
        <View
            android:id="@+id/statusIndicator"
            android:layout_width="4dp"
            android:layout_height="0dp"
            android:background="@color/status_present"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Student Avatar/Initial -->
        <TextView
            android:id="@+id/studentInitial"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="AB"
            android:textColor="@color/on_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/circle_background"
            android:backgroundTint="@color/primary"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/statusIndicator" />

        <!-- Student name -->
        <TextView
            android:id="@+id/txtStudentName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Student Name"
            android:textAppearance="@style/TextAppearance.App.Body1"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:layout_marginStart="12dp"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintTop_toTopOf="@id/studentInitial"
            app:layout_constraintStart_toEndOf="@id/studentInitial"
            app:layout_constraintEnd_toStartOf="@id/statusBadge" />

        <!-- Student ID -->
        <TextView
            android:id="@+id/txtStudentId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ID: 123456"
            android:textAppearance="@style/TextAppearance.App.Body2"
            android:textColor="@color/text_secondary"
            android:layout_marginStart="12dp"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintTop_toBottomOf="@id/txtStudentName"
            app:layout_constraintStart_toEndOf="@id/studentInitial"
            app:layout_constraintEnd_toStartOf="@id/statusBadge" />

        <!-- Status badge -->
        <TextView
            android:id="@+id/statusBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PRESENT"
            android:textColor="@color/on_primary"
            android:textSize="12sp"
            android:textStyle="bold"
            android:background="@drawable/button_primary"
            android:backgroundTint="@color/status_present"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp"
            app:layout_constraintTop_toTopOf="@id/studentInitial"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Timestamp -->
        <TextView
            android:id="@+id/txtTimestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:30 AM"
            android:textAppearance="@style/TextAppearance.App.Body2"
            android:textColor="@color/text_secondary"
            android:drawablePadding="4dp"
            app:drawableStartCompat="@drawable/ic_hours"
            app:drawableTint="@color/text_hint"
            app:layout_constraintTop_toBottomOf="@id/statusBadge"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Status description (hidden by default) -->
        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Status Details"
            android:textAppearance="@style/TextAppearance.App.Body2"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/txtStudentId"
            app:layout_constraintStart_toStartOf="@id/txtStudentName"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Remove button (hidden by default) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRemoveStudent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove"
            android:textColor="@color/error"
            android:textSize="12sp"
            android:visibility="gone"
            android:layout_marginTop="8dp"
            style="@style/Widget.App.Button.Outlined"
            app:strokeColor="@color/error"
            app:rippleColor="@color/error"
            app:layout_constraintTop_toBottomOf="@id/txtStatus"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
